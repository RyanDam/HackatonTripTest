<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rstudio.hackatontrip.controller.ConfirmPass">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:src="@drawable/back"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_mask_login" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Confirm password"
            android:id="@+id/textView4"
            android:textColor="@color/color_text_description" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/user_pass"
            android:textColor="@color/color_text_login"
            android:textColorHint="@color/color_hint_login"
            android:background="@drawable/field_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:text="Next"
            android:id="@+id/comfirm_bt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_red"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>
