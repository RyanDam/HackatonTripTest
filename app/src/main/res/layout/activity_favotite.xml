<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rstudio.hackatontrip.controller.FavotiteActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView4"
        android:src="@drawable/back"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_mask_login" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="boy"
                    android:id="@+id/button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="technology"
                    android:id="@+id/button2"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/button"
                    android:layout_toEndOf="@+id/button"
                    android:background="@drawable/favo_selected"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="girl"
                    android:id="@+id/button3"
                    android:background="@drawable/favo_not_select"
                    android:layout_alignBottom="@+id/button2"
                    android:layout_toRightOf="@+id/button2"
                    android:layout_toEndOf="@+id/button2"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="artchitech"
                    android:id="@+id/button4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="Sắn"
                    android:id="@+id/button5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="dance"
                    android:id="@+id/button6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="chat"
                    android:id="@+id/button8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="travel"
                    android:id="@+id/button9"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="drink pepsi"
                    android:id="@+id/button10"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_selected"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="boy"
                    android:id="@+id/button11"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="technology"
                    android:id="@+id/button12"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/button11"
                    android:layout_toEndOf="@+id/button11"
                    android:background="@drawable/favo_selected"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="girl"
                    android:id="@+id/button13"
                    android:background="@drawable/favo_not_select"
                    android:layout_alignBottom="@+id/button12"
                    android:layout_toRightOf="@+id/button12"
                    android:layout_toEndOf="@+id/button12"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="artchitech"
                    android:id="@+id/button14"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="Sắn"
                    android:id="@+id/button15"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="dance"
                    android:id="@+id/button16"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="chat"
                    android:id="@+id/button17"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_selected"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="travel"
                    android:id="@+id/button18"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/favo_height"
                    android:text="drink pepsi"
                    android:id="@+id/button19"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/favo_not_select"
                    android:layout_margin="4dp"
                    android:textColor="@color/color_text_favo" />
            </LinearLayout>
        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:text="DONE"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_red"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

    </LinearLayout>

</RelativeLayout>
